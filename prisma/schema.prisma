generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id             String @id @default(uuid())
  name           String
  address        String
  whatsappNumber String
  email          String @unique
  password_hash  String

  pets Pet[]

  @@map("orgs")
}

model Pet {
  id           String            @id @default(uuid())
  name         String
  breed        String
  age          Int
  energy_level Int
  independence IndependenceLevel
  size         AnimalSize
  description  String
  city         String

  org   Org?    @relation(fields: [orgId], references: [id])
  orgId String?

  @@map("pets")
}

enum AnimalSize {
  SMALL
  LARGE
}

enum IndependenceLevel {
  LOW
  MEDIUM
  HIGH
}
